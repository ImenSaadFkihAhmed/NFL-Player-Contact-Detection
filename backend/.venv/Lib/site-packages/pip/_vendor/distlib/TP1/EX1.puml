@startuml

interface Component {
  +add(component: Component): void
  +modify(): void
  +display(): void
}

class Order implements Component {
  -orderId: int
  -orderName: String

  +Order(orderId: int, orderName: String)
  +add(component: Component): void
  +modify(): void
  +display(): void
}

class Item  {
  -itemId: int
  -itemName: String

  +Item(itemId: int, itemName: String)
  +add(component: Component): void
  +modify(): void
  +display(): void
}

Component <|-- Order
Component <|-- Item

@enduml
